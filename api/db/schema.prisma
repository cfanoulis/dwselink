datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model ScheduleItem {
  id        Int       @id @default(autoincrement())
  teacher   Teacher   @relation(fields: [teacherId], references: [id])
  teacherId Int
  class     String
  day       Int
  start     Int
  track     Classtype

  @@map("classes")
}

model Teacher {
  id      Int    @id @default(autoincrement())
  name    String
  schname String

  @@map("teachers")
  ScheduleItem ScheduleItem[]
}

model User {
  id        Int       @id @default(autoincrement())
  loginhash String
  firstName String
  lastName  String
  alati     String
  track     Classtype

  @@map("authorized_users")
}

enum Classtype {
  GENERAL
  STEM
  HUMANITIES

  @@map("class_type")
}
